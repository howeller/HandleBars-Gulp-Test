body,html {
	position:absolute;
	overflow:hidden;
	border:0 none;
	outline:0;
	padding:0px;
	margin:0px;
	background-color:#D4D4D4;
}
div {
	overflow:hidden;
	padding:0px; margin:0px;
}
.cmn, svg {
	display:block;
	position:absolute;
}
.clickable {cursor:pointer;}
.border {
	border: 1px solid #3c3c3c;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
}
.full-size{
	width: {{width}}px;
	height: {{height}}px;
}
#ad {
	position: relative;
	background-color: #2b2b2b;
	overflow: hidden;
	cursor: pointer;
	visibility:hidden;
}
#clicker {opacity:0}